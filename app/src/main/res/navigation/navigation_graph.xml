<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/rvFragment">

    <fragment
        android:id="@+id/pokemonDetailsFragment"
        android:name="com.example.pokemons.presentation.details.PokemonDetailsFragment"
        android:label="fragment_pokemon_details"
        tools:layout="@layout/fragment_pokemon_details" >
        <argument
            android:name="pokeminId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/rvFragment"
        android:name="com.example.pokemons.presentation.rv.RvFragment"
        android:label="fragment_rv"
        tools:layout="@layout/fragment_rv" >
        <action
            android:id="@+id/action_rvFragment_to_pokemonDetailsFragment"
            app:destination="@id/pokemonDetailsFragment" />
    </fragment>
</navigation>